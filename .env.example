# =============================================================================
# Environment Variables Configuration
# Copy this file to .env and fill in your values
# =============================================================================

# =============================================================================
# Vertica Database (used by both projects)
# =============================================================================
VERTICA_HOST=your-vertica-host.example.com
VERTICA_PORT=5433
VERTICA_USER=your_username
VERTICA_PASSWORD=your_password
VERTICA_DATABASE=your_database

# =============================================================================
# Oracle Database (used by reportdigital_preview)
# =============================================================================
ORACLE_HOST=your-oracle-host.example.com
ORACLE_PORT=1521
ORACLE_USER=your_username
ORACLE_PASSWORD=your_password
ORACLE_SERVICE=your_service_name

# =============================================================================
# PostgreSQL Database (used by social_posts)
# =============================================================================
POSTGRES_HOST=your-postgres-host.example.com
POSTGRES_PORT=5432
POSTGRES_USER=your_username
POSTGRES_PASSWORD=your_password
POSTGRES_DATABASE=your_database

# =============================================================================
# S3/Minio Storage (used by reportdigital_preview)
# =============================================================================
S3_ENDPOINT_URL=https://your-minio-endpoint.example.com
S3_ACCESS_KEY=your_access_key
S3_SECRET_KEY=your_secret_key
S3_BUCKET=report-digital-preview
S3_REGION=us-east-1

# =============================================================================
# HCTI API - HTML to Image (used by reportdigital_preview)
# =============================================================================
HCTI_API_ENDPOINT=https://hcti.io/v1/image
HCTI_API_USER_ID=your_user_id
HCTI_API_KEY=your_api_key

# =============================================================================
# Mapp Newsletter API (used by reportdigital_preview)
# =============================================================================
MAPP_API_USER=your_mapp_username
MAPP_API_PASSWORD=your_mapp_password
MAPP_API_BASE_URL=https://your-mapp-instance.example.com

# =============================================================================
# Facebook Ads API (used by social_posts)
# =============================================================================
FACEBOOK_APP_ID=your_app_id
FACEBOOK_APP_SECRET=your_app_secret
FACEBOOK_ACCESS_TOKEN=your_access_token

# =============================================================================
# Google Ads API (used by social_posts)
# =============================================================================
GOOGLE_ADS_DEVELOPER_TOKEN=your_developer_token
GOOGLE_ADS_CLIENT_ID=your_client_id
GOOGLE_ADS_CLIENT_SECRET=your_client_secret
GOOGLE_ADS_REFRESH_TOKEN=your_refresh_token
GOOGLE_ADS_LOGIN_CUSTOMER_ID=your_login_customer_id

# =============================================================================
# LinkedIn Ads API (used by social_posts)
# =============================================================================
LINKEDIN_CLIENT_ID=your_client_id
LINKEDIN_CLIENT_SECRET=your_client_secret
LINKEDIN_ACCESS_TOKEN=your_access_token
LINKEDIN_REFRESH_TOKEN=your_refresh_token

# =============================================================================
# Email Alerts (used by social_posts)
# =============================================================================
SMTP_HOST=fremont.esprinet.com
SMTP_PORT=25
ALERT_EMAIL_SENDER=noreply@esprinet.com
ALERT_EMAIL_RECIPIENTS=DataScience@esprinet.com

# =============================================================================
# General Settings
# =============================================================================
LOG_LEVEL=INFO
AIRFLOW_HOME=/opt/airflow
